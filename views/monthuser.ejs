      <td><%=alluser.name%></td>
      <td><%=alluser.username%></td>
     
      
      
      <td><%=total%></td>
     
       <td><%=month%></td>
 
                  <%if(total>1000 && secondmonth==month){%>
 
      <td>
             <%if(vip==false){%>
			           <a class="btn btn-outline-primary btn-md" href="/updateCustomersStatus/<%=alluser._id%>/<%=month%>">Make VIP-Customer</a>
            <%}else if(vip==true){%>
        <a class="btn btn-danger btn-m" href="/updateCustomersStatus/<%=alluser._id%>/<%=month%>">remove-VIP</a>
            <%}%>


			 
  </td>
<%}%>
    </tr>
  </tbody>
 
