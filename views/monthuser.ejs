  <thead>
    <tr>
      <th scope="col">#</th>
     
      <th scope="col">Name</th>
      <th scope="col">Email</th>
     


     
      <th scope="col">Total</th>
      
      <th scope="col">Month</th>
      <%if(total>1000 && secondmonth==month){%>
        
