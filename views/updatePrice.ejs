<title>Update <%=data%>!</title>


<br>
<div class="container">
<% if(error && error.length>0){%>
<div class="alert alert-danger">
<%=error %>
</div>
<% } %>
<% if(success && success.length>0){%>
<div class="alert alert-success">
<%=success %>
</div>
<% } %>
</div>
<br>


<div style="transform:translate(38%,80%)">
<h1 style="padding-left:5%;transform:translateY(-8%)"></h1>

<%if(data=="price"){%>
 <form action="/updateData/<%=prods._id%>/price" method="POST">
	<div class="form-group">
	<input type="number" placeholder="Price" name="price"  value=<%=prods.Price%> class="form-control" style="width:270px">
	</div>
	<button class="btn btn-lg btn-primary btn-block" style="width:270px">Update</button>
	</div>
 </form>
<%}else if(data=="name"){%>

 <form action="/updateData/<%=prods._id%>/name" method="POST">
	<div class="form-group">
	<input type="text" placeholder="Product Name" name="name"  value="<%=prods.Name%>" class="form-control" style="width:270px">
	</div>
	<button class="btn btn-lg btn-primary btn-block" style="width:270px">Update</button>
	</div>
 </form>
<%}else if(data=="offer"){%>
 
   <form action="/updateData/<%=prods._id%>/offer" method="POST">
	<div class="form-group">
	<input type="number" placeholder="Product Original Price" name="offer"  value=<%=prods.offer%> class="form-control" style="width:270px">
	</div>
	<button class="btn btn-lg btn-primary btn-block" style="width:270px">Update</button>
	</div>
 </form>
<%}%>
</div>
