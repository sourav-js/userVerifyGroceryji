<div class="container">
<% if(error && error.length>0){%>
<div class="alert alert-danger">
<%=error %>
</div>
<% } %>
<% if(success && success.length>0){%>
<div class="alert alert-success">
<%=success %>
</div>
<% } %>
</div>


<div style="transform:translate(38%,80%)">
<h1 style="padding-left:5%;transform:translateY(-8%)">Set password!</h1>
<form action="/setPassword" method="POST">

<div class="form-group">
<input type="hidden" placeholder="username" name="username" value=<%=user.username%> class="form-control" style="width:275px">
</div>

<div class="form-group">
<p>
<input type="password" placeholder="new password" name="password" class="form-control" style="width:275px">
</p>
</div>

<div class="form-group">
<p>
<input type="password" placeholder="confirm password" name="confirm" class="form-control" style="width:275px">
</p>
</div>

<button class="btn btn-lg btn-primary btn-block" style="width:275px">Reset</button>
</div>
</form>
</div>


